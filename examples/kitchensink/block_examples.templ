// BlockExamples showcases Block component usage.
// Demonstrates how Block creates consistent vertical spacing between content sections.
templ BlockExamples() {
	// Section header using generic semantic wrapper
	@el.Block(el.BlockProps{}, el.Items{TitleH3("is-4", "Block")})
	
	{{
		// Define all block examples with their codes
		examples := []ComponentItem{
			{ID: "block-1", Code: BlockExample1Code(), Component: BlockExample1()},
			{ID: "block-2", Code: BlockExample2Code(), Component: BlockExample2()},
			{ID: "block-3", Code: BlockExample3Code(), Component: BlockExample3()},
		}
	}}
	
	// Render all examples
	for _, example := range examples {
		@ExampleWithCode(example.ID, example.Code, example.Component)
	}
}
