)`
}

// TableExamples showcases Table component variations.
// Demonstrates basic and styled tables with modifiers.
templ TableExamples() {
	@el.Block(el.BlockProps{}, el.Items{TitleH3("is-4", "Table")})
	
	{{
		examples := []ComponentItem{
			{ID: "table-basic", Code: TableExample1Code(), Component: TableExample1()},
			{ID: "table-styled", Code: TableExample2Code(), Component: TableExample2()},
		}
	}}
	
	for _, example := range examples {
		@ExampleWithCode(example.ID, example.Code, example.Component)
	}
}
