// ContentExamples showcases Content component usage.
// Demonstrates automatic styling of various HTML elements.
templ ContentExamples() {
	@el.Block(el.BlockProps{}, el.Items{TitleH3("is-4", "Content")})
	{{
		examples := []ComponentItem{
			{ID: "content-html", Code: ContentExample1Code(), Component: ContentExample1()},
		}
	}}
	for _, example := range examples {
		@ExampleWithCode(example.ID, example.Code, example.Component)
	}
}
