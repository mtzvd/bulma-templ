			el.Button(
				el.ButtonProps{Color: "is-primary"},
				el.Items{el.Html("Normal")},
			),
			el.Button(
				el.ButtonProps{Size: "is-medium", Color: "is-primary"},
				el.Items{el.Html("Medium")},
			),
			el.Button(
				el.ButtonProps{Size: "is-large", Color: "is-primary"},
				el.Items{el.Html("Large")},
			),
		},
	)
}

func ButtonExample2Code() string {
	return `@el.Buttons(
	el.ButtonsProps{},
	el.Items{
		el.Button(
			el.ButtonProps{Size: "is-small", Color: "is-primary"},
			el.Items{el.Html("Small")},
		),
		el.Button(
			el.ButtonProps{Color: "is-primary"},
			el.Items{el.Html("Normal")},
		),
		el.Button(
			el.ButtonProps{Size: "is-medium", Color: "is-primary"},
