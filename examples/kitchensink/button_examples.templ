// ButtonExample3 demonstrates button state variations.
// States include loading, disabled, and active.
templ ButtonExample3() {
	@el.Buttons(
		el.ButtonsProps{},
		el.Items{
			el.Button(
				el.ButtonProps{Color: "is-primary", State: "is-loading"},
				el.Items{el.Html("Loading")},
			),
			el.Button(
				el.ButtonProps{Color: "is-primary", Disabled: true},
				el.Items{el.Html("Disabled")},
			),
			el.Button(
				el.ButtonProps{Color: "is-primary", State: "is-active"},
				el.Items{el.Html("Active")},
			),
		},
	)
}

func ButtonExample3Code() string {
	return `@el.Buttons(
	el.ButtonsProps{},
	el.Items{
		el.Button(
			el.ButtonProps{Color: "is-primary", State: "is-loading"},
			el.Items{el.Html("Loading")},
		),
		el.Button(
			el.ButtonProps{Color: "is-primary", Disabled: true},
			el.Items{el.Html("Disabled")},
		),
		el.Button(
			el.ButtonProps{Color: "is-primary", State: "is-active"},
			el.Items{el.Html("Active")},
		),
	},
)`
}

// ButtonExample4 demonstrates full width button layout.
// FullWidth modifier makes button expand to 100% of parent container width.
templ ButtonExample4() {
	@el.Button(
		el.ButtonProps{Color: "is-primary", FullWidth: true},
		el.Items{el.Html("Full Width Button")},
	)
}

func ButtonExample4Code() string {
	return `@el.Button(
	el.ButtonProps{Color: "is-primary", FullWidth: true},
	el.Items{el.Html("Full Width Button")},
)`
}

// ButtonExamples showcases all Button component variations.
// Demonstrates color, size, state, and layout properties.
templ ButtonExamples() {
	@el.Block(el.BlockProps{}, el.Items{TitleH3("is-4", "Button")})
	
	{{
		examples := []ComponentItem{
			{ID: "button-colors", Code: ButtonExample1Code(), Component: ButtonExample1()},
			{ID: "button-sizes", Code: ButtonExample2Code(), Component: ButtonExample2()},
			{ID: "button-states", Code: ButtonExample3Code(), Component: ButtonExample3()},
			{ID: "button-fullwidth", Code: ButtonExample4Code(), Component: ButtonExample4()},
		}
	}}
	
	for _, example := range examples {
		@ExampleWithCode(example.ID, example.Code, example.Component)
	}
}
