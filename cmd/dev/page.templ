// KitchenSink â€” Bulma-Templ Kitchen Sink.
// Atomic level: ORGANISM
//
// KitchenSink is an incremental showcase of Bulma-Templ
// elements, components, forms and layout primitives.
// It uses the `Items` content model and `Html` for page-level
// semantics where necessary.

package main

import (
	"github.com/mtzvd/bulma-templ/elements"
	"github.com/mtzvd/bulma-templ/layout"

	
)

templ Page() {
	@Test()
}

templ Test() {
	@Doctype()
	<html>	
		<head>
			@MetaCharset()
			@MetaViewport()
			@MetaTitle()
			@BulmaCSS()
		</head>
		<body>
			
		
	@elements.Content(
			elements.ContentProps{
				Size: "is-medium",
				Attr: templ.Attributes{
					"class": "has-text-danger",	
					"data-test": "content-example",		
				},
			},
			elements.Items{
				elements.Html(`
					Hello, Bulma-Templ!
					
				`),
			},

	)

	@elements.Content(
			elements.ContentProps{},
			
			elements.Items{
				elements.Html(`
					Test content without modifier.
					
				`),
			},

	)
	</body>
	</html>
	
}

templ Doctype() {
	@elements.Html(`<!DOCTYPE html>`)
}

templ MetaCharset() {
	@elements.Html(`<meta charset="utf-8"/>`)
}

templ MetaViewport() {
	@elements.Html(`<meta name="viewport" content="width=device-width, initial-scale=1"/>`)
}

templ MetaTitle() {
	@elements.Html(`<title>Bulma-Templ</title>`)
}

templ BulmaCSS() {
	@elements.Html(`<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@1.0.4/css/bulma.min.css"/>`)
}

templ KitchenSink() {
	@Doctype()
	<html>
		<head>
			@MetaCharset()
			@MetaViewport()
			@MetaTitle()
			@BulmaCSS()
		</head>
		<body>
			@layout.Section(
				layout.SectionProps{},
				elements.Items{
					layout.Container(
						layout.ContainerProps{},
						elements.Items{
							KitchenSinkContent(),
						},
					),
				})
		</body>
	</html>
}

templ KitchenSinkContent() {
	@elements.Html(`
		<!-- Additional content showcasing Bulma-Templ elements goes here -->
	`)
	@KitchenSinkHeader(
		KitchenSinkHeaderProps{
			Title:    "Bulma-Templ Kitchen Sink",
			Subtitle: "An incremental showcase of Bulma-Templ elements, components, forms and layout primitives.",
		},
	)
	@ElementsSection()
	@ComponentsSection()
	@FormsSection()
	@ColumnsSection()
	@GridSection()
	@LayoutSection()
}

type KitchenSinkHeaderProps struct {
	Title    string
	Subtitle string
}

templ KitchenSinkHeader(props KitchenSinkHeaderProps) {
	@elements.Html("<h1>")
	@elements.Title(
		elements.TitleProps{
			Size: "is-3",
		},
		elements.Items{
			elements.Html(props.Title),
		})
	@elements.Html("</h1>")
	@elements.Html("<p>")
	@elements.Subtitle(
		elements.SubtitleProps{
			Size: "is-4",
		},
		elements.Items{
			elements.Html(props.Subtitle),
		})
	@elements.Html("</p>")
}

templ SectionHeader(props KitchenSinkHeaderProps) {
	@elements.Html("<h2>")
	@elements.Title(
		elements.TitleProps{
			Size: "is-4",
		},
		elements.Items{
			elements.Html(props.Title),
		})
	@elements.Html("</h2>")
	@elements.Html("<p>")
	@elements.Subtitle(
		elements.SubtitleProps{
			Size: "is-5",
		},
		elements.Items{
			elements.Html(props.Subtitle),
		})
	@elements.Html("</p>")
}

templ ElementsSection() {
	@layout.Section(
		layout.SectionProps{
			Attr: templ.Attributes{
				"class": "mt-6",
			},
		},
		elements.Items{
			layout.Container(
				layout.ContainerProps{},
				elements.Items{
					ElementsSectionContent(),
				},
			),
		},
	)
}

templ ElementsSectionContent() {
	@SectionHeader(
		KitchenSinkHeaderProps{
			Title:    "Elements",
			Subtitle: "Showcase of Bulma-Templ elements.",
		},
	)
	@BlockItem()
}

