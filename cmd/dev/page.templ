templ ItemHeader(Title string) {
	@elements.Html("<h3>")
	@elements.Title(
		elements.TitleProps{
			Size: "is-5",
		},
		elements.Items{
			elements.Html(Title),
		})
	@elements.Html("</h3>")
}

templ BlockItem() {
	@elements.Block(
		elements.BlockProps{
			Attr: templ.Attributes{"class": "mt-6"},
		},
		elements.Items{
			BlockItemContent(),
		},
	)
}

templ BlockItemContent() {
	@ItemHeader("Block")
	@elements.Block(
		elements.BlockProps{
			Attr: templ.Attributes{"class": "my-6"},
		},
		elements.Items{
			elements.Html(`
				This text is within a <strong>block</strong>.
			`),
		},
	)
	@elements.Block(
		elements.BlockProps{},
		elements.Items{
			elements.Html(`
				This text is within a <strong>second block</strong>.  Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean efficitur sit amet massa fringilla egestas. Nullam condimentum luctus turpis.
			`),
		},
	)
	@elements.Block(
		elements.BlockProps{},
		elements.Items{
			elements.Html(`
				This text is within a <strong>third block</strong>. This block has no margin at the bottom.
			`),
		},
	)
}
